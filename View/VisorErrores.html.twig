        <h1 class="mb-4"><i class="fa-solid fa-triangle-exclamation"></i> Visor de errores</h1>
        {% if fsc.datosArchivos %}
            {% for datos in fsc.datosArchivos %}
                <div class="card shadow mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a href="https://facturascripts.com/errores/{{ datos.hash }}" target="_blank">
